<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.yyyu.baselibrary.view.RoundImageView
        android:id="@+id/iv_com_user_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:src="@mipmap/cat"
        />


    <TextView
        android:id="@+id/tv_com_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@mipmap/ic_vote_thumb_blue"
        android:drawablePadding="8dp"
        android:text="0" />

    <TextView
        android:id="@+id/tv_com_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_com_user_icon"
        android:padding="8dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_com_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_com_username"
        android:layout_marginLeft="56dp"
        android:padding="4dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_com_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_com_content"
        android:layout_marginLeft="56dp"
        android:padding="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_com_time"
        android:layout_toRightOf="@+id/id_comment_iv_avatar"
        android:background="#33000000" />
</RelativeLayout>